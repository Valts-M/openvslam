    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mapping",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:program}",
            "args": ["--debug", "-v", "${workspaceFolder}/vocab/orb_vocab.fbow", "-c", "${workspaceFolder}/example/realsense/realsense-D435i.yaml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Localization",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:program}",
            "args": ["-v", "${workspaceFolder}/vocab/orb_vocab.fbow", "-s", "/home/valts/test", "-c", "${workspaceFolder}/example/realsense/realsense-D453i.yaml", "-l"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "debug",
            "environment": [],

            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ],
    "inputs": [
        {
          "id": "program",
          "type": "promptString",
          "description": "Program name",
          "default": "run_realsense_slam"
        }
      ]
}